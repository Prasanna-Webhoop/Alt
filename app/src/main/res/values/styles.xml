    <!--FORM LABEL STYLE-->
    <style name="form_label">
        <item name="android:textColor">@color/form_label_color</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="fontType">@string/avenirRegular</item>
        <item name="android:capitalize">words</item>
    </style>

    <!--PROFILE ACTIVITY FORM TEXT STYLE-->
    <style name="profile_form_text_style">
        <item name="fontType">@string/avenirRegular</item>
        <item name="android:textColor">@color/form_label_color</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:capitalize">words</item>
        <item name="android:inputType">textNoSuggestions</item>

        <!--<item name="android:padding">7dp</item>-->
    </style>

    <!--PUSH USER STYLE-->
    <style name="push_user_text_style">
        <item name="fontType">@string/avenirBold</item>
        <item name="android:textColor">@color/color_black</item>
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:textStyle">bold</item>
        <item name="textAllCaps">true</item>

        <!--<item name="android:padding">7dp</item>-->
        <!--android:textAllCaps="true"
        android:textColor="#000000"
        android:textSize="@dimen/text_size_small"
        android:textStyle="bold"-->

    </style>


