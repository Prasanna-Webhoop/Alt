    <!--Edit Profile EditText Style.-->
    <style name="edit_profile_form_edit_text">
        <!-- If you changed the layout_weight of this editText Field then also apply the changes to
        the "comment_editText" also.-->
        <item name="android:layout_width">0dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">0.5</item>
        <item name="fontType">@string/avenirRegular</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:capitalize">sentences</item>
        <item name="android:textColor">@color/color_black</item>
        <item name="android:textColorHint">@color/colorHint</item>
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:inputType">textCapWords</item>

    </style>

    <!--EditText Comments EditText Style.-->
    <style name="comment_editText">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">0.6</item>
        <item name="android:minHeight">80dp</item>
        <item name="android:padding">@dimen/comment_box_padding</item>
        <item name="android:capitalize">sentences</item>
        <item name="android:inputType">textCapSentences|textMultiLine</item>
        <item name="android:gravity">top</item>
        <item name="android:singleLine">false</item>
        <!--<item name="android:layout_marginBottom">5dp</item>-->
        <item name="android:background">@drawable/rectangle_grey</item>
        <item name="android:textColor">@color/color_black</item>
        <item name="android:textColorHint">@color/colorHint</item>
        <item name="android:textSize">@dimen/text_size_small</item>

    </style>

    <!--    android:layout_width="55dp"
        android:layout_height="wrap_content"
        android:background="@drawable/toggle_button"
        android:textOff=""
        android:textOn=""-->
    <style name="toggle_button">
        <item name="android:layout_width">45dp</item>
        <!--<item name="android:layout_marginTop">3dp</item>-->
        <!--<item name="android:layout_marginBottom">3dp</item>-->
        <item name="android:layout_height">30dp</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:background">@drawable/toggle_button</item>
        <item name="android:textOff"></item>
        <item name="android:textOn"></item>
    </style>

    <style name="ios_popup_animation" parent="Widget.AppCompat.PopupWindow">
        <item name="android:windowEnterAnimation">@anim/ios_enter_popup_animation</item>
        <item name="android:windowExitAnimation">@null</item>
    </style>


    <style name="bottom_button_style">
        <item name="fontType">@string/avenirRegular</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/default_bottom_button_height</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:textSize">12sp</item>
        <item name="android:background">@drawable/drawable_border_top</item>
        <item name="android:textColor">@color/form_bottom_button_text_color</item>
    </style>


    <!--Activity Middle Button-->
    <style name="button_upload_document_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/default_bottom_button_height</item>
        <item name="fontType">@string/avenirRegular</item>
        <!--<item name="android:layout_alignParentBottom">true</item>-->
        <item name="android:background">@drawable/drawable_button_scan_id</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/form_bottom_button_text_color</item>
    </style>

    <!--APP PROGRESS DIALOG STYLE-->
    <style name="custom_progress_dialog_style" parent="@style/Theme.AppCompat.Dialog">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
    </style>

    <!--APP CUSTOM ERROR MESSAGE ALERT DIALOG THEME-->
    <style name="MyDialogTheme" parent="@android:style/Theme.Panel">
        <item name="android:windowAnimationStyle">@style/MyAnimation.Window</item>
    </style>

    <style name="MyAnimation.Window" parent="@android:style/Animation.Activity">
        <item name="android:windowEnterAnimation">@anim/push_up_out</item>
        <item name="android:windowExitAnimation">@anim/push_up_in</item>
    </style>


    <!--NUMERIC PASSWORD KEYPAD STYLE-->
    <style name="numeric_textview">
        <item name="android:layout_width">70dp</item>
        <item name="android:layout_height">70dp</item>
        <item name="android:background">@drawable/rounded_circle_black_numeric_keypad</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/color_black</item>
        <item name="android:textSize">@dimen/numeric_keypad_text_size</item>
    </style>

    <!--NUMERIC PASSWORD KEYPAD STYLE-->
    <style name="numeric_textview_small">
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">50dp</item>
