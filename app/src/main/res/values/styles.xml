        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/color_black</item>
        <item name="android:textSize">@dimen/numeric_keypad_text_size_small</item>
    </style>

    <!--NUMERIC PASSWORD KEYPAD STYLE-->
    <style name="numeric_textview_normal">
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:background">@drawable/rounded_circle_black_numeric_keypad</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/color_black</item>
        <item name="android:textSize">@dimen/numeric_keypad_text_size_small</item>
    </style>

