<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:onBoarding="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/launch_bg">


    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_centerInParent="true"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="37dp"
            android:rotation="180"
            android:src="@drawable/disclosure_indicator" />

        <com.alt.others.OnBoardingButton
            android:id="@+id/onBoardingButton"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:background="@android:color/transparent"
            android:gravity="center_vertical"
            android:onClick="onGetStartedClick"
            android:paddingLeft="40dp"
            android:text="GET STARTED"
            android:textColor="@android:color/tertiary_text_light"
            android:textSize="15sp"
            onBoarding:fontType="fonts/AvenirNextLTPro-Regular.otf" />

    </RelativeLayout>


</RelativeLayout>
